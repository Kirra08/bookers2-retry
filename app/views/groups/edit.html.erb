<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <%= form_with model: @group do |f| %>
        <div class="form-group">
        <label>Name</label>
        <%= f.text_field :name,class: 'form-control user_name' %>
        </div>
        
        <div class="form-group">
          <label>Introdction</label>
          <%= f.text_area :introduction, class: "form-control user_introduction" %>
        </div>
        
        <div class="form-group">
          <label>Image</label><br>
          <%= f.file_field :image, placeholder: "グループ画像", accept: "image/*" %>
        </div>
        
        <div class="form-group">
          <input type="submit" name="commit" value="Update Group" class="btn btn-secondary">
        </div>
      <% end %>
    </div>
  </div>
</div>