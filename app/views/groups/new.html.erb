<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h1>Create Group</h1>
      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <label>グループ名</label>
          <%= f.text_field :name, class: "form-control group_name" %>
        </div>
        
        <div class="form-group">
          <label>紹介文</label>
          <%= f.text_area :introduction, class: "form-control group_introduction" %>
        </div>
        
        <div class="form-group">
          <label>グループ画像</label><br>
          <%= f.file_field :image, placeholder: "ファイルを選択", accept: "image/*" %>
        </div>
        
        <div class="form-group">
        <input type="submit" name="commit" value="Create Group" class="btn btn-success">
      </div>
      <% end %>
    </div>
  </div>
</div>