<div class="container">
  <%= render "searches/search" %>
    <div class="row">
      <div class="col-md-3">
        <%= render "users/user_info", user: @user %>
        <%= render "books/form", book: @book %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Group Detail</h2>
        <span><%= link_to "Back", groups_path %></span>
        <table class="table">
          <thead>
            <tr>
              <th></th>
              <th><p> グループ名 </p></th>
              <th><p>紹介文</p></th>
              <th><p>メンバー</p></th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= image_tag @group.get_image, size: '100x100' %></td>
              <td><%= @group.name %></td>
              <td><%= @group.introduction %></td>
               <td>
                <% @group.users.each do |user| %>
                 <li style="list-style: none;"><%= user.name %></li>
                <% end %>
                </td>
                <% if @group.owner_id == current_user.id %>
                  <td><%= link_to "Edit", edit_group_path(@group), class: "btn btn-sm btn-success" %></td>
                  <td><%= link_to "Notice an Event",new_group_group_mail_path(@group), class: "btn btn-sm btn-info" %></td>
                <% else %>
                  <% unless @group.belongs?(current_user) %>
                    <td><%= link_to "Join this group", group_group_users_path(@group), method: :post, class: "btn btn-sm btn-success" %></td>
                  <% else %>
                    <td><%= link_to "Leave this group", group_group_user_path(@group), method: :delete, class: "btn btn-sm btn-danger" %></td>
                  <% end %>
              <% end %>
               <%= form_with model: [@group, @group_mail] do |f| %>
       <div class="form-group">
        <label for="group_mail_title">Title</label>
        <%= f.text_field :title,class: "form-control group_mail_title" %>
       </div>
       <div class="form-group">
        <label for="group_mail_body">Content</label>
         <%= f.text_area :body, class: "form-control group_mail_body" %>
       </div>
        <div class="form-group">
          <input type="submit" name="commit" value="送信" class="btn btn-success" >
        </div>
       
      <% end %>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>