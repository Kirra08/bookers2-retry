<% if @book.errors.any? %>
 <%= @book.errors.count %> errors prohibited this obj from being saved:
 <ul>
  <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
 <% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-5 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label>Title</label>
          <%= f.text_field :title,class: "form-control book_title" %>
        </div>
        
        <div class="form-group">
          <label>Opinion</label>
          <%= f.text_area :body,class: "form-control book-body" %>
        </div>
        <div class="mb-2">
          <%= render 'star', book: @book %>
        </div>
        
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" >
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <span>|</span>
      <%= link_to "Back", books_path %>
   </div>
  </div>
</div>