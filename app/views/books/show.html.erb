<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= render "form", book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to (image_tag @user.get_profile_image(100,100)), user_path(@books.user_id) %><br>
            <%= link_to @books.user.name, user_path(@books.user.id) %>
          </td>
          <td>
            <%= @books.title %>
          </td>
          <td>
            <%= @books.body %>
          </td>
          <% if @books.favorited_by?(current_user) %>
           <p>
             <td><%= link_to book_favorites_path(@books), method: :delete do %>
               <%= @books.favorites.count %>:♥</td>
               <% end %>
           </p>
          <% else %>
           <p>
             <td><%= link_to book_favorites_path(@books), method: :post do %>
               <%= @books.favorites.count %>:♡</td>
             <% end %>
           </p>
          <% end %>
          
          <% if @user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか?"} %>
            </td>
          <% end %>
        </tr>
        </table>
      <h3>Comments</h3>
        <%= form_with model: [@books, @book_comment] do |f| %>
          <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "form-control" %><br>
          <%= f.submit "Comment" , class: "btn btn-sm btn-success"%>
        <% end %>
        
        <p>Comments:<%= @books.book_comments.count %></p>
        <table class="table">
        <tr>
      <% @books.book_comments.each do |book_comment| %>
        <td><p><%= image_tag book_comment.user.get_profile_image(100,100) %></p>
        <%= book_comment.user.name %></td>
        <td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= book_comment.comment %></td>
        <% if book_comment.user == current_user %>
        <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, data: {confirm: "本当に削除しますか?"} %></td>
        <% end %>
        <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>