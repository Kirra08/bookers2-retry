<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= render "form", book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to (image_tag @user.get_profile_image(100,100)), user_path(@books.user_id) %>
            <%= link_to @books.user.name, user_path(@books.user.id) %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>