<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/user_info", user: @user %>
      <%= render "form", book: @book %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to (image_tag @user.get_profile_image(100,100)), user_path(@books.user_id) %><br>
            <%= link_to @books.user.name, user_path(@books.user.id) %>
          </td>
          <td>
            <%= @books.title %>
          </td>
          <td>
            <%= @books.body %>
          </td>
          <td class="favorite-btn-<%= @books.id %>">
            <%= render 'favorites/favorite-btn', book: @books %>
          </td>
          
          <td class="book-comments-counter">
            <%= render "book_comments/counter", book: @books %>
          </td>
          
          <% if @user == current_user %>
            <td>
              <%= link_to "Edit", edit_book_path(@books), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "Destroy", book_path(@books), method: :delete, class: "btn btn-danger", data: {confirm: "本当に削除しますか?"} %>
            </td>
          <% end %>
        </tr>
        </table>
        <div class="book-comments-index">
          <%= render "book_comments/index", book: @books %>
        </div>
      
      <%= render "book_comments/form", book: @books, book_comment: @book_comment %>
      
    </div>
  </div>
</div>