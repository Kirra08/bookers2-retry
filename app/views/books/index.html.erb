<div class="container">
  <%= render "searches/search" %>
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <%= render 'form', book: @book %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Comments</th>
          </tr>
          
          <% @books.each do |book| %>
          <tr>
            <td><%= link_to (image_tag book.user.get_profile_image(100,100)), user_path(book.user_id) %></td>
            <td><%= link_to book.title, book_path(book) %></td>
            <td><%= book.body %></td>
            <td><%= link_to "#{book.book_comments.count}Comments", book_path(book) %></td>
            <% if book.favorited_by?(current_user) %>
             <p>
               <td><%= link_to book_favorites_path(book), method: :delete do %>
                 <%= book.favorites.count %>:♥</td>
                 <% end %>
             </p>
            <% else %>
             <p>
               <td><%= link_to book_favorites_path(book), method: :post do %>
                 <%= book.favorites.count %>:♡</td>
               <% end %>
             </p>
            <% end %>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
</div>