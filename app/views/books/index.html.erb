<div class="container">
  <%= render "searches/search" %>
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user_info', user: @user %>
        <%= render 'form', book: @book %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <%= render 'index_form' %>
        <div class="index">
          <table class="table">
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th>Comments</th>
            <th>Rate</th>
            </tr>
            <%= render 'index', books: @books %>
          </table>
        </div>
      </div>
    </div>
</div>