 <% books.each do |book| %>
  <tr>
    <td><%= link_to (image_tag book.user.get_profile_image(50,50)), user_path(book.user_id) %></td>
    <td><%= link_to book.title, book_path(book) %></td>
    <td><%= book.body %></td>
    <td><%= book.tag %></td>
    <td><%= link_to "#{book.book_comments.count}Comments", book_path(book) %></td>
    <td><%= render 'books/star', book: book %></td>
    <td class="favorite-btn-<%= book.id %>">
      <%= render "favorites/favorite-btn", book: book %>
    </td>
  </tr>
<% end %>