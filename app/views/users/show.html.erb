<main>
<div class="container px-5 px-sm-0">
 <%= render "searches/search" %>
  <div class="row">
   <div class="col-md-3">
     <%= render 'user_info', user: @user%>
     <%= render 'books/form', book: @book %>
   </div>
   <div class="col-md-8 offset-md-1">
    <table class="table">
     <h2>Books</h2>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
       <% @books.each do |book| %>
       <% if book.user_id == @user.id %>
       <tr>
            <td><%= link_to (image_tag book.user.get_profile_image(100,100)), user_path(book.user_id) %></td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        <% end %> 
       </table>
       
       <%= form_with url: user_users_search_books_path(@user), method: :get do |f| %>
         <%= f.date_field :created_at %>
         <%= f.submit '検索', class: 'btn btn-primary'  %>
       <% end %>
       
       <div id="search_result">
         <% if @search_book.present? %>
           <%= render 'search_books', search_book: @search_book %>　#③
         <% end %>
       </div>

    </div>
  </div>
</div>
</main>