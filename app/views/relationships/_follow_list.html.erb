<% if @users.exists? %>
  <% @users.each do |user| %>
    <table class="table" %>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th>フォロー数</th>
          <th>フォロワー数</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= image_tag user.get_profile_image(100,100) %></td>
          <td><%= user.name %></td>
          <td><%= user.followings.count %></td>
          <td><%= user.followers.count %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
<% else %>
  <p>ユーザーがいません</p>
<% end %>